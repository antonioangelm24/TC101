#include <iostream>
using namespace std;
void sum(int x, int y){
  int z;
  z= (x+y);
  cout << " x + y =: " << z << endl;
}

void difference(int x, int y){
  int z;
  z = (x - y);
  cout << " x - y =: " << z << endl;
}

void multiplication(int x, int y){
  int z;
  z = (x*y);
  cout << " x * y =: " << z << endl;

}

void division(int x, int y){
  int z;
  z = (x/y);
  cout << " x / y =: " << z << endl;
}

int main(){
  int x, y;
  cout << "This programm will do a lot of things LOL. It will make the difference, the product, the division, and the rest of the division of two numbers. That you'll provide." << endl;
  cout << "Write the first number: " ;
  cin >> x;
  cout << "Write the second number: " ;
  cin >> y;
  sum(x,y);
  difference(x,y);
  multiplication(x,y);
  division(x,y);

  return 0;
}

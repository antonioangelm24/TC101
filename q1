#include <iostream>
using namespace std;

int triangles(int n){
	int i, contador, x, y;
	contador = 0;
	y = 1;
		do {
			for (i=0; i < n; i++){
				for (x=0; x < y; x++){
					cout << "T";
				}
				cout << endl;
				y++;
				contador++;
			}

		} while (contador < n);
		do {
			for (i=0; i < n; i++){
				y--;
				contador--;
				for (x=y; x > 0; x--){
					cout << "T";
				}
				cout << endl;

			}


		} while (contador > n);
		return 0;
}

int main(){
	int n;
	cout << "Give me the size of the triangle: ";
	cin >> n;
	cout << triangles(n);


	return 0;
}
